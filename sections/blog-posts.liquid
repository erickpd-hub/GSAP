{% comment %}
  ÉLÉGANCE - Blog Posts Section
  Sección para mostrar lista de artículos del blog
{% endcomment %}

<style>
  .blog-posts {
    padding: 6rem 2rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.grid_columns }}, 1fr);
    gap: 3rem;
  }

  .blog-article {
    opacity: 0;
    cursor: pointer;
    transition: transform 0.3s ease;
  }

  .blog-article:hover {
    transform: translateY(-8px);
  }

  .article-image {
    width: 100%;
    aspect-ratio: 16/9;
    object-fit: cover;
    border-radius: 1rem;
    margin-bottom: 1.5rem;
  }

  .article-meta {
    display: flex;
    gap: 1rem;
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    margin-bottom: 1rem;
  }

  .article-title {
    font-size: 1.75rem;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .article-title a {
    color: var(--color-text);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .article-title a:hover {
    color: var(--color-accent);
  }

  .article-excerpt {
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .article-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-accent);
    font-weight: 500;
    text-decoration: none;
    transition: gap 0.3s ease;
  }

  .article-link:hover {
    gap: 0.75rem;
  }

  .blog-pagination {
    margin-top: 4rem;
    display: flex;
    justify-content: center;
    gap: 0.5rem;
  }

  .pagination-item {
    padding: 0.75rem 1.25rem;
    border: 1px solid var(--color-border);
    background: var(--color-background);
    color: var(--color-text);
    border-radius: 0.5rem;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .pagination-item:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  .pagination-item.active {
    background: var(--color-accent);
    color: var(--color-background);
    border-color: var(--color-accent);
  }

  @media (max-width: 968px) {
    .blog-posts {
      padding: 4rem 1.5rem;
    }

    .blog-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .article-title {
      font-size: 1.5rem;
    }
  }
</style>

<div class="blog-posts" data-blog-posts>
  {% if section.settings.title != blank %}
    <h2 class="section-title" style="text-align: center; margin-bottom: 4rem;">{{ section.settings.title }}</h2>
  {% endif %}

  <div class="blog-grid" data-articles-grid>
    {% for article in blog.articles %}
      <article class="blog-article" data-article>
        {% if article.image %}
          <img 
            src="{{ article.image | img_url: '800x' }}" 
            alt="{{ article.title }}"
            class="article-image"
            loading="lazy"
          >
        {% endif %}

        <div class="article-meta">
          {% if section.settings.show_date %}
            <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
              {{ article.published_at | date: '%d %b %Y' }}
            </time>
          {% endif %}
          
          {% if section.settings.show_author and article.author %}
            <span>Por {{ article.author }}</span>
          {% endif %}

          {% if article.tags.size > 0 %}
            <span>{{ article.tags.first }}</span>
          {% endif %}
        </div>

        <h3 class="article-title">
          <a href="{{ article.url }}">{{ article.title }}</a>
        </h3>

        {% if article.excerpt != blank %}
          <div class="article-excerpt">
            {{ article.excerpt | strip_html | truncatewords: 30 }}
          </div>
        {% endif %}

        <a href="{{ article.url }}" class="article-link">
          Leer Más
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M6 12L10 8L6 4" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          </svg>
        </a>
      </article>
    {% endfor %}
  </div>

  {% if paginate.pages > 1 %}
    <div class="blog-pagination">
      {% if paginate.previous %}
        <a href="{{ paginate.previous.url }}" class="pagination-item">← Anterior</a>
      {% endif %}

      {% for part in paginate.parts %}
        {% if part.is_link %}
          <a href="{{ part.url }}" class="pagination-item">{{ part.title }}</a>
        {% else %}
          <span class="pagination-item {% if part.title == paginate.current_page %}active{% endif %}">
            {{ part.title }}
          </span>
        {% endif %}
      {% endfor %}

      {% if paginate.next %}
        <a href="{{ paginate.next.url }}" class="pagination-item">Siguiente →</a>
      {% endif %}
    </div>
  {% endif %}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  if (typeof gsap === 'undefined') return;

  const articles = document.querySelectorAll('[data-article]');

  gsap.from(articles, {
    opacity: 0,
    y: 40,
    duration: 0.8,
    stagger: 0.15,
    ease: 'power3.out',
    clearProps: 'all'
  });
});
</script>

{% schema %}
{
  "name": "Artículos del Blog",
  "class": "blog-posts-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título de la Sección",
      "default": "Últimas Publicaciones"
    },
    {
      "type": "range",
      "id": "posts_per_page",
      "min": 3,
      "max": 24,
      "step": 3,
      "label": "Artículos por Página",
      "default": 12
    },
    {
      "type": "range",
      "id": "grid_columns",
      "min": 1,
      "max": 4,
      "step": 1,
      "label": "Columnas",
      "default": 3
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "label": "Mostrar Autor",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "label": "Mostrar Fecha",
      "default": true
    }
  ]
}
{% endschema %}
