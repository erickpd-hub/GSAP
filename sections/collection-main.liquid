{% comment %}
  ÉLÉGANCE - Collection Main Section
  Sección principal para páginas de colección con filtros y sorting
{% endcomment %}

<style>
  .collection-main {
    padding: 6rem 2rem;
  }

  .collection-header {
    text-align: center;
    margin-bottom: 4rem;
    opacity: 0;
  }

  .collection-title {
    font-size: 3.5rem;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  .collection-description {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  .collection-toolbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 3rem;
    flex-wrap: wrap;
    gap: 1rem;
    opacity: 0;
  }

  .collection-count {
    color: var(--color-text-secondary);
  }

  .collection-sort {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .collection-sort select {
    padding: 0.75rem 2.5rem 0.75rem 1rem;
    border: 1px solid var(--color-border);
    background: var(--color-background);
    color: var(--color-text);
    border-radius: 0.5rem;
    cursor: pointer;
    appearance: none;
    background-image: url("data:image/svg+xml,%3Csvg width='12' height='8' viewBox='0 0 12 8' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 1.5L6 6.5L11 1.5' stroke='%23000' stroke-width='1.5' stroke-linecap='round'/%3E%3C/svg%3E");
    background-repeat: no-repeat;
    background-position: right 1rem center;
    transition: border-color 0.3s ease;
  }

  .dark .collection-sort select {
    background-image: url("data:image/svg+xml,%3Csvg width='12' height='8' viewBox='0 0 12 8' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 1.5L6 6.5L11 1.5' stroke='%23FFF' stroke-width='1.5' stroke-linecap='round'/%3E%3C/svg%3E");
  }

  .collection-sort select:hover {
    border-color: var(--color-accent);
  }

  .collection-products {
    display: grid;
    grid-template-columns: repeat({{ section.settings.grid_columns_desktop }}, 1fr);
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .collection-pagination {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    opacity: 0;
  }

  .pagination-item {
    padding: 0.75rem 1.25rem;
    border: 1px solid var(--color-border);
    background: var(--color-background);
    color: var(--color-text);
    border-radius: 0.5rem;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .pagination-item:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  .pagination-item.active {
    background: var(--color-accent);
    color: var(--color-background);
    border-color: var(--color-accent);
  }

  @media (max-width: 768px) {
    .collection-main {
      padding: 4rem 1.5rem;
    }

    .collection-title {
      font-size: 2.5rem;
    }

    .collection-products {
      grid-template-columns: repeat({{ section.settings.grid_columns_mobile }}, 1fr);
      gap: 1.5rem;
    }
  }
</style>

<div class="collection-main" data-collection-main>
  <div class="collection-header" data-fade-in>
    <h1 class="collection-title">{{ collection.title }}</h1>
    {% if collection.description != blank %}
      <div class="collection-description">{{ collection.description }}</div>
    {% endif %}
  </div>

  {% if section.settings.enable_sorting or section.settings.enable_filtering %}
    <div class="collection-toolbar" data-fade-in>
      <div class="collection-count">
        {{ collection.products_count }} {% if collection.products_count == 1 %}Producto{% else %}Productos{% endif %}
      </div>

      {% if section.settings.enable_sorting %}
        <div class="collection-sort">
          <label for="sort-by">Ordenar por:</label>
          <select id="sort-by" name="sort_by">
            <option value="manual">Destacados</option>
            <option value="best-selling">Más Vendidos</option>
            <option value="title-ascending">A-Z</option>
            <option value="title-descending">Z-A</option>
            <option value="price-ascending">Precio: Menor a Mayor</option>
            <option value="price-descending">Precio: Mayor a Menor</option>
            <option value="created-descending">Más Recientes</option>
            <option value="created-ascending">Más Antiguos</option>
          </select>
        </div>
      {% endif %}
    </div>
  {% endif %}

  <div class="collection-products" data-stagger-products>
    {% for product in collection.products %}
      {% render 'product-card', product: product %}
    {% endfor %}
  </div>

  {% if paginate.pages > 1 %}
    <div class="collection-pagination" data-fade-in>
      {% if paginate.previous %}
        <a href="{{ paginate.previous.url }}" class="pagination-item">
          ← Anterior
        </a>
      {% endif %}

      {% for part in paginate.parts %}
        {% if part.is_link %}
          <a href="{{ part.url }}" class="pagination-item">{{ part.title }}</a>
        {% else %}
          <span class="pagination-item {% if part.title == paginate.current_page %}active{% endif %}">
            {{ part.title }}
          </span>
        {% endif %}
      {% endfor %}

      {% if paginate.next %}
        <a href="{{ paginate.next.url }}" class="pagination-item">
          Siguiente →
        </a>
      {% endif %}
    </div>
  {% endif %}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  if (typeof gsap === 'undefined') return;

  const header = document.querySelector('[data-fade-in]');
  const toolbar = document.querySelectorAll('[data-fade-in]')[1];
  const products = document.querySelector('[data-stagger-products]');
  const pagination = document.querySelectorAll('[data-fade-in]')[2];

  // Animate header
  gsap.from(header, {
    opacity: 0,
    y: 30,
    duration: 0.8,
    ease: 'power3.out'
  });

  // Animate toolbar
  if (toolbar) {
    gsap.from(toolbar, {
      opacity: 0,
      y: 20,
      duration: 0.6,
      delay: 0.2,
      ease: 'power3.out'
    });
  }

  // Stagger products
  if (products) {
    gsap.from(products.children, {
      opacity: 0,
      y: 40,
      duration: 0.8,
      stagger: 0.1,
      delay: 0.4,
      ease: 'power3.out',
      clearProps: 'all'
    });
  }

  // Animate pagination
  if (pagination) {
    gsap.from(pagination, {
      opacity: 0,
      y: 20,
      duration: 0.6,
      delay: 0.6,
      ease: 'power3.out'
    });
  }

  // Sort functionality
  const sortSelect = document.getElementById('sort-by');
  if (sortSelect) {
    sortSelect.addEventListener('change', function() {
      const url = new URL(window.location.href);
      url.searchParams.set('sort_by', this.value);
      window.location.href = url.toString();
    });

    // Set current sort value
    const urlParams = new URLSearchParams(window.location.search);
    const currentSort = urlParams.get('sort_by');
    if (currentSort) {
      sortSelect.value = currentSort;
    }
  }
});
</script>

{% schema %}
{
  "name": "Colección Principal",
  "class": "collection-main-section",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
      "min": 8,
      "max": 48,
      "step": 4,
      "label": "Productos por Página",
      "default": 16
    },
    {
      "type": "range",
      "id": "grid_columns_desktop",
      "min": 2,
      "max": 5,
      "step": 1,
      "label": "Columnas (Desktop)",
      "default": 4
    },
    {
      "type": "range",
      "id": "grid_columns_mobile",
      "min": 1,
      "max": 2,
      "step": 1,
      "label": "Columnas (Mobile)",
      "default": 2
    },
    {
      "type": "checkbox",
      "id": "enable_filtering",
      "label": "Habilitar Filtros",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_sorting",
      "label": "Habilitar Ordenamiento",
      "default": true
    }
  ]
}
{% endschema %}
