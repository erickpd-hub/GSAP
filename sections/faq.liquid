  "name": "Preguntas Frecuentes",
  "class": "faq-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "Preguntas Frecuentes"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtítulo",
      "default": "Encuentra respuestas a las preguntas más comunes"
