<footer class="bg-black text-white py-16">
  <div class="container mx-auto px-6">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-12">
      <!-- Brand Column -->
      <div>
        <h3 class="tracking-[0.3em] mb-6">
          {{ section.settings.brand_name }}
        </h3>
        <p class="text-white/60 text-sm leading-relaxed">
          {{ section.settings.brand_description }}
        </p>
      </div>

      <!-- Links Columns -->
      {% for block in section.blocks %}
        {% if block.type == 'link_list' %}
          <div>
            <h4 class="mb-6 tracking-wider">{{ block.settings.title }}</h4>
            <ul class="space-y-3">
              {% for link in block.settings.menu.links %}
                <li>
                  <a href="{{ link.url }}" class="text-white/60 hover:text-white transition-colors text-sm">
                    {{ link.title }}
                  </a>
                </li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}
      {% endfor %}

      <!-- Social Media -->
      <div>
        <h4 class="mb-6 tracking-wider">{{ section.settings.social_title }}</h4>
        <div class="flex gap-4">
          {% if section.settings.instagram_url != blank %}
            <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener" class="bg-white/10 hover:bg-white/20 transition-colors p-3 rounded-full">
              <i data-lucide="instagram" class="w-5 h-5"></i>
            </a>
          {% endif %}
          {% if section.settings.facebook_url != blank %}
            <a href="{{ section.settings.facebook_url }}" target="_blank" rel="noopener" class="bg-white/10 hover:bg-white/20 transition-colors p-3 rounded-full">
              <i data-lucide="facebook" class="w-5 h-5"></i>
            </a>
          {% endif %}
          {% if section.settings.twitter_url != blank %}
            <a href="{{ section.settings.twitter_url }}" target="_blank" rel="noopener" class="bg-white/10 hover:bg-white/20 transition-colors p-3 rounded-full">
              <i data-lucide="twitter" class="w-5 h-5"></i>
            </a>
          {% endif %}
        </div>
      </div>
    </div>

    <div class="border-t border-white/10 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-white/40 text-sm">
          © {{ 'now' | date: '%Y' }} {{ section.settings.brand_name }}. {{ section.settings.copyright_text }}
        </p>
        <div class="flex gap-6">
          {% if section.settings.privacy_policy_url != blank %}
            <a href="{{ section.settings.privacy_policy_url }}" class="text-white/40 hover:text-white text-sm">
              Política de Privacidad
            </a>
          {% endif %}
          {% if section.settings.terms_url != blank %}
            <a href="{{ section.settings.terms_url }}" class="text-white/40 hover:text-white text-sm">
              Términos y Condiciones
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "brand_name",
      "label": "Nombre de la Marca",
      "default": "ÉLÉGANCE"
    },
    {
      "type": "textarea",
      "id": "brand_description",
      "label": "Descripción de la Marca",
      "default": "Redefiniendo la elegancia masculina desde 1985. Prendas de lujo elaboradas con pasión y precisión."
    },
    {
      "type": "text",
      "id": "social_title",
      "label": "Título Redes Sociales",
      "default": "SÍGUENOS"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "twitter_url",
      "label": "Twitter URL"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Texto de Copyright",
      "default": "Todos los derechos reservados."
    },
    {
      "type": "url",
      "id": "privacy_policy_url",
      "label": "URL Política de Privacidad"
    },
    {
      "type": "url",
      "id": "terms_url",
      "label": "URL Términos y Condiciones"
    }
  ],
  "blocks": [
    {
      "type": "link_list",
      "name": "Lista de Enlaces",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Título",
          "default": "TIENDA"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menú"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "blocks": [
        {
          "type": "link_list",
          "settings": {
            "title": "TIENDA"
          }
        },
        {
          "type": "link_list",
          "settings": {
            "title": "SERVICIO"
          }
        }
      ]
    }
  ]
}
{% endschema %}
