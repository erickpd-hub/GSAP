{% comment %}
  ÉLÉGANCE - Gallery Section
  Galería de imágenes con efecto parallax y hover
{% endcomment %}

<style>
  .gallery {
    padding: 8rem 2rem;
  }

  .gallery__container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .gallery__header {
    text-align: center;
    margin-bottom: 4rem;
    opacity: 0;
  }

  .gallery__title {
    font-size: 3.5rem;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  .gallery__subtitle {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
  }

  .gallery__grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns }}, 1fr);
    gap: {{ section.settings.gap }}px;
  }

  .gallery__item {
    position: relative;
    overflow: hidden;
    border-radius: {{ section.settings.border_radius }}px;
    opacity: 0;
    cursor: pointer;
  }

  .gallery__item--tall {
    grid-row: span 2;
  }

  .gallery__item--wide {
    grid-column: span 2;
  }

  .gallery__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .gallery__item:hover .gallery__image {
    transform: scale(1.1);
  }

  .gallery__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 2rem;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .gallery__item:hover .gallery__overlay {
    opacity: 1;
  }

  .gallery__caption {
    color: white;
    font-size: 1.125rem;
    font-weight: 500;
  }

  @media (max-width: 968px) {
    .gallery {
      padding: 4rem 1.5rem;
    }

    .gallery__title {
      font-size: 2.5rem;
    }

    .gallery__grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .gallery__item--tall,
    .gallery__item--wide {
      grid-row: span 1;
      grid-column: span 1;
    }
  }

  @media (max-width: 640px) {
    .gallery__grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<section class="gallery">
  <div class="gallery__container">
    {% if section.settings.title != blank %}
      <div class="gallery__header" data-fade-in>
        <h2 class="gallery__title">{{ section.settings.title }}</h2>
        {% if section.settings.subtitle != blank %}
          <p class="gallery__subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="gallery__grid" data-gallery-grid>
      {% for block in section.blocks %}
        <div class="gallery__item {% if block.settings.size == 'tall' %}gallery__item--tall{% elsif block.settings.size == 'wide' %}gallery__item--wide{% endif %}" data-gallery-item {{ block.shopify_attributes }}>
          {% if block.settings.image %}
            <img 
              src="{{ block.settings.image | img_url: '1000x' }}" 
              alt="{{ block.settings.caption | default: section.settings.title }}"
              class="gallery__image"
              loading="lazy"
            >
          {% else %}
            <div class="gallery__image" style="background: #e5e5e5; aspect-ratio: 1;"></div>
          {% endif %}

          {% if block.settings.caption != blank %}
            <div class="gallery__overlay">
              <p class="gallery__caption">{{ block.settings.caption }}</p>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  if (typeof gsap === 'undefined') return;

  const header = document.querySelector('[data-fade-in]');
  const items = document.querySelectorAll('[data-gallery-item]');

  if (header) {
    gsap.from(header, {
      opacity: 0,
      y: 30,
      duration: 0.8,
      ease: 'power3.out'
    });
  }

  if (items.length) {
    gsap.from(items, {
      opacity: 0,
      y: 40,
      duration: 0.8,
      stagger: 0.1,
      delay: 0.3,
      ease: 'power3.out',
      clearProps: 'all'
    });
  }

  // Parallax effect on scroll
  items.forEach(item => {
    const image = item.querySelector('.gallery__image');
    
    gsap.to(image, {
      yPercent: -10,
      ease: 'none',
      scrollTrigger: {
        trigger: item,
        start: 'top bottom',
        end: 'bottom top',
        scrub: true
      }
    });
  });
});
</script>

{% schema %}
{
  "name": "Galería",
  "class": "gallery-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "Nuestra Galería"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtítulo"
    },
    {
      "type": "range",
      "id": "columns",
      "min": 2,
      "max": 4,
      "step": 1,
      "label": "Columnas",
      "default": 3
    },
    {
      "type": "range",
      "id": "gap",
      "min": 8,
      "max": 48,
      "step": 4,
      "unit": "px",
      "label": "Espacio entre Imágenes",
      "default": 16
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 32,
      "step": 4,
      "unit": "px",
      "label": "Radio de Bordes",
      "default": 8
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Imagen",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagen"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Descripción"
        },
        {
          "type": "select",
          "id": "size",
          "label": "Tamaño",
          "options": [
            {
              "value": "normal",
              "label": "Normal"
            },
            {
              "value": "tall",
              "label": "Alto (2x altura)"
            },
            {
              "value": "wide",
              "label": "Ancho (2x ancho)"
            }
          ],
          "default": "normal"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Galería",
      "blocks": [
        {"type": "image"},
        {"type": "image"},
        {"type": "image"},
        {"type": "image"},
        {"type": "image"},
        {"type": "image"}
      ]
    }
  ]
}
{% endschema %}
