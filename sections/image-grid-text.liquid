      "default": "Lo que nos hace únicos"
    },
    {
      "type": "range",
      "id": "columns",
      "min": 2,
      "max": 4,
      "step": 1,
      "label": "Columnas",
      "default": 3
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Alineación del Texto",
      "options": [
        {"value": "left", "label": "Izquierda"},
        {"value": "center", "label": "Centro"},
        {"value": "right", "label": "Derecha"}
      ],
      "default": "left"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Elemento",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagen"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Título",
          "default": "Título del Elemento"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Texto",
          "default": "Descripción del elemento"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Texto del Enlace"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "URL del Enlace"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Grid de Imágenes con Texto",
      "blocks": [
        {
          "type": "item",
          "settings": {
            "title": "Calidad Premium",
            "text": "Materiales de la más alta calidad"
          }
        },
        {
          "type": "item",
          "settings": {
            "title": "Diseño Exclusivo",
            "text": "Diseños únicos y elegantes"
          }
        },
        {
          "type": "item",
          "settings": {
            "title": "Hecho a Mano",
            "text": "Artesanía tradicional"
          }
        }
      ]
    }
  ]
}
{% endschema %}
