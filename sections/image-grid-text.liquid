{% comment %}
  ÉLÉGANCE - Image Grid with Text Section
  Grid de imágenes con texto descriptivo
{% endcomment %}

<style>
  .image-grid-text {
    padding: 8rem 2rem;
  }

  .image-grid-text__container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .image-grid-text__header {
    text-align: center;
    margin-bottom: 4rem;
    opacity: 0;
  }

  .image-grid-text__title {
    font-size: 3.5rem;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  .image-grid-text__subtitle {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    max-width: 700px;
    margin: 0 auto;
  }

  .image-grid-text__grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns }}, 1fr);
    gap: 3rem;
  }

  .image-grid-text__item {
    opacity: 0;
  }

  .image-grid-text__image-wrapper {
    position: relative;
    aspect-ratio: 4/5;
    overflow: hidden;
    border-radius: 1rem;
    margin-bottom: 1.5rem;
  }

  .image-grid-text__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .image-grid-text__item:hover .image-grid-text__image {
    transform: scale(1.05);
  }

  .image-grid-text__content {
    text-align: {{ section.settings.text_alignment }};
  }

  .image-grid-text__item-title {
    font-size: 1.75rem;
    margin-bottom: 0.75rem;
  }

  .image-grid-text__item-text {
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-bottom: 1rem;
  }

  .image-grid-text__link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-accent);
    font-weight: 500;
    text-decoration: none;
    transition: gap 0.3s ease;
  }

  .image-grid-text__link:hover {
    gap: 0.75rem;
  }

  @media (max-width: 968px) {
    .image-grid-text {
      padding: 4rem 1.5rem;
    }

    .image-grid-text__title {
      font-size: 2.5rem;
    }

    .image-grid-text__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }
  }

  @media (max-width: 640px) {
    .image-grid-text__grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<section class="image-grid-text">
  <div class="image-grid-text__container">
    {% if section.settings.title != blank %}
      <div class="image-grid-text__header" data-fade-in>
        <h2 class="image-grid-text__title">{{ section.settings.title }}</h2>
        {% if section.settings.subtitle != blank %}
          <p class="image-grid-text__subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="image-grid-text__grid" data-grid>
      {% for block in section.blocks %}
        <div class="image-grid-text__item" data-grid-item {{ block.shopify_attributes }}>
          <div class="image-grid-text__image-wrapper">
            {% if block.settings.image %}
              <img 
                src="{{ block.settings.image | img_url: '800x' }}" 
                alt="{{ block.settings.title }}"
                class="image-grid-text__image"
                loading="lazy"
              >
            {% else %}
              <div class="image-grid-text__image" style="background: #e5e5e5;"></div>
            {% endif %}
          </div>

          <div class="image-grid-text__content">
            {% if block.settings.title != blank %}
              <h3 class="image-grid-text__item-title">{{ block.settings.title }}</h3>
            {% endif %}

            {% if block.settings.text != blank %}
              <p class="image-grid-text__item-text">{{ block.settings.text }}</p>
            {% endif %}

            {% if block.settings.link_text != blank and block.settings.link_url != blank %}
              <a href="{{ block.settings.link_url }}" class="image-grid-text__link">
                {{ block.settings.link_text }}
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
                  <path d="M6 12L10 8L6 4" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                </svg>
              </a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  if (typeof gsap === 'undefined') return;

  const header = document.querySelector('[data-fade-in]');
  const items = document.querySelectorAll('[data-grid-item]');

  if (header) {
    gsap.from(header, {
      opacity: 0,
      y: 30,
      duration: 0.8,
      ease: 'power3.out'
    });
  }

  if (items.length) {
    gsap.from(items, {
      opacity: 0,
      y: 40,
      duration: 0.8,
      stagger: 0.15,
      delay: 0.3,
      ease: 'power3.out',
      clearProps: 'all'
    });
  }
});
</script>

{% schema %}
{
  "name": "Grid de Imágenes con Texto",
  "class": "image-grid-text-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título",
