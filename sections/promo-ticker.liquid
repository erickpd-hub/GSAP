{% comment %}
  ÉLÉGANCE - Promo Ticker Section
  Cinta de ofertas animada que se mueve de derecha a izquierda
{% endcomment %}

<style>
  .promo-ticker {
    background: var(--color-accent);
    color: var(--color-background);
    overflow: hidden;
    position: relative;
    z-index: 100;
    padding: 0.75rem 0;
  }

  .promo-ticker__track {
    display: flex;
    gap: 3rem;
    white-space: nowrap;
    will-change: transform;
  }

  .promo-ticker__item {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    flex-shrink: 0;
  }

  .promo-ticker__icon {
    width: 1rem;
    height: 1rem;
  }

  .promo-ticker__text {
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }
</style>

<div class="promo-ticker" data-promo-ticker style="{% if section.settings.background_color %}background-color: {{ section.settings.background_color }};{% endif %} {% if section.settings.text_color %}color: {{ section.settings.text_color }};{% endif %}">
  <div class="promo-ticker__track" data-ticker-track>
    {% for block in section.blocks %}
      <div class="promo-ticker__item" {{ block.shopify_attributes }}>
        {% if block.settings.icon %}
          <svg class="promo-ticker__icon" viewBox="0 0 20 20" fill="currentColor">
            {% case block.settings.icon %}
              {% when 'tag' %}
                <path d="M17.707 9.293l-5-5A.997.997 0 0012 4H5a2 2 0 00-2 2v7c0 .265.105.52.293.707l5 5a.999.999 0 001.414 0l8-8a.999.999 0 000-1.414zM7 9a2 2 0 110-4 2 2 0 010 4z"/>
              {% when 'truck' %}
                <path d="M13 3H3a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2V5a2 2 0 00-2-2zm-7 9a1 1 0 110 2 1 1 0 010-2zm8 0a1 1 0 110 2 1 1 0 010-2zm3-8v5h-2V5h-1v5h-2V5H3v6h12v-1h3z"/>
              {% when 'gift' %}
                <path d="M5 4a2 2 0 012-2 2 2 0 012 2v1H5V4zm8 0a2 2 0 00-2-2 2 2 0 00-2 2v1h4V4zM3 6h14a1 1 0 011 1v2H2V7a1 1 0 011-1zm0 4h6v7H4a1 1 0 01-1-1v-6zm8 0h6v6a1 1 0 01-1 1h-5v-7z"/>
              {% when 'star' %}
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            {% endcase %}
          </svg>
        {% endif %}
        <span class="promo-ticker__text">{{ block.settings.text }}</span>
      </div>
    {% endfor %}

    {%- comment -%} Duplicate for seamless loop {%- endcomment -%}
    {% for block in section.blocks %}
      <div class="promo-ticker__item">
        {% if block.settings.icon %}
          <svg class="promo-ticker__icon" viewBox="0 0 20 20" fill="currentColor">
            {% case block.settings.icon %}
              {% when 'tag' %}
                <path d="M17.707 9.293l-5-5A.997.997 0 0012 4H5a2 2 0 00-2 2v7c0 .265.105.52.293.707l5 5a.999.999 0 001.414 0l8-8a.999.999 0 000-1.414zM7 9a2 2 0 110-4 2 2 0 010 4z"/>
              {% when 'truck' %}
                <path d="M13 3H3a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2V5a2 2 0 00-2-2zm-7 9a1 1 0 110 2 1 1 0 010-2zm8 0a1 1 0 110 2 1 1 0 010-2zm3-8v5h-2V5h-1v5h-2V5H3v6h12v-1h3z"/>
              {% when 'gift' %}
                <path d="M5 4a2 2 0 012-2 2 2 0 012 2v1H5V4zm8 0a2 2 0 00-2-2 2 2 0 00-2 2v1h4V4zM3 6h14a1 1 0 011 1v2H2V7a1 1 0 011-1zm0 4h6v7H4a1 1 0 01-1-1v-6zm8 0h6v6a1 1 0 01-1 1h-5v-7z"/>
              {% when 'star' %}
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            {% endcase %}
          </svg>
        {% endif %}
        <span class="promo-ticker__text">{{ block.settings.text }}</span>
      </div>
    {% endfor %}
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const ticker = document.querySelector('[data-promo-ticker]');
  if (!ticker) return;

  const track = ticker.querySelector('[data-ticker-track]');
  const speed = {{ section.settings.speed | default: 30 }};
  
  // GSAP animation for continuous scroll
  if (typeof gsap !== 'undefined') {
    const items = track.children;
    const itemsArray = Array.from(items);
    const halfLength = itemsArray.length / 2;
    
    // Calculate total width of one set of items
    let totalWidth = 0;
    for (let i = 0; i < halfLength; i++) {
      totalWidth += itemsArray[i].offsetWidth + 48; // 48px = 3rem gap
    }
    
    // Create seamless loop animation
    gsap.to(track, {
      x: -totalWidth,
      duration: totalWidth / speed,
      ease: 'none',
      repeat: -1
    });
  }
});
</script>

{% schema %}
{
  "name": "Cinta de Ofertas",
  "class": "promo-ticker-section",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de Fondo",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color de Texto",
      "default": "#FFFFFF"
    },
    {
      "type": "range",
      "id": "speed",
      "min": 10,
      "max": 100,
      "step": 5,
      "unit": "px/s",
      "label": "Velocidad de Animación",
      "default": 30
    }
  ],
  "blocks": [
    {
      "type": "promo",
      "name": "Promoción",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Texto",
          "default": "ENVÍO GRATIS EN PEDIDOS SUPERIORES A $150"
        },
        {
          "type": "select",
          "id": "icon",
          "label": "Icono",
          "options": [
            {
              "value": "none",
              "label": "Sin Icono"
            },
            {
              "value": "tag",
              "label": "Etiqueta"
            },
            {
              "value": "truck",
              "label": "Camión"
            },
            {
              "value": "gift",
              "label": "Regalo"
            },
            {
              "value": "star",
              "label": "Estrella"
            }
          ],
          "default": "tag"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Cinta de Ofertas",
      "blocks": [
        {
          "type": "promo",
          "settings": {
            "text": "ENVÍO GRATIS EN PEDIDOS SUPERIORES A $150",
            "icon": "truck"
          }
        },
        {
          "type": "promo",
          "settings": {
            "text": "NUEVA COLECCIÓN PRIMAVERA 2025",
            "icon": "star"
          }
        },
        {
          "type": "promo",
          "settings": {
            "text": "DEVOLUCIONES GRATUITAS EN 30 DÍAS",
            "icon": "gift"
          }
        }
      ]
    }
  ]
}
{% endschema %}
